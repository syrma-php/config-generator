#!/usr/bin/env php
<?php

declare(strict_types=1);

use Syrma\ConfigGenerator\Application;

(static function () {
    $file = null;
    foreach ([__DIR__.'/../../autoload.php', __DIR__.'/../autoload.php', __DIR__.'/../vendor/autoload.php'] as $possibleFile) {
        if (file_exists($possibleFile)) {
            $file = $possibleFile;

            break;
        }
    }

    if (null === $file) {
        throw new RuntimeException('Unable to locate autoload.php file.');
    }

    require_once $file;
})();

$app = new Application('@release-date@');
$app->run();

__HALT_COMPILER();
